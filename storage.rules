rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the file
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Helper function to check file size (max 10MB)
    function isValidSize() {
      return resource.size < 10 * 1024 * 1024;
    }
    
    // Helper function to check file type
    function isValidImageType() {
      return resource.contentType.matches('image/.*');
    }
    
    function isValidDocumentType() {
      return resource.contentType in ['application/pdf', 'image/jpeg', 'image/png', 'image/gif'];
    }

    // Organization logos
    match /organizations/{orgId}/{fileName} {
      allow read: if true; // Public read for logos
      allow write, delete: if isAuthenticated() && 
                              isValidSize() && 
                              isValidImageType();
    }
    
    // Campaign banners - allow all authenticated users to upload
    match /campaigns/{fileName} {
      allow read, write, delete: if isAuthenticated();
    }
    
    // Achievement evidence
    match /achievements/{userId}/{achievementId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId) && 
                      isValidSize() && 
                      isValidDocumentType();
      allow delete: if isOwner(userId);
    }
    
    // User profile pictures
    match /users/{userId}/{fileName} {
      allow read: if isAuthenticated();
      allow write, delete: if isOwner(userId) && 
                              isValidSize() && 
                              isValidImageType();
    }
    
    // Prize images
    match /prizes/{campaignId}/{fileName} {
      allow read: if isAuthenticated();
      allow write, delete: if isAuthenticated() && 
                              isValidSize() && 
                              isValidImageType();
    }
  }
}